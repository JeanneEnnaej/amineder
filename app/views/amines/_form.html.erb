<%= simple_form_for(amine) do |f| %>
  <div>
    <p>Nom :</p>
    <%= f.input :name, label: false %>
  </div>
  <div>
    <p>Prix :</p>
    <%= f.input :price, label: false %>
  </div>
  <div class="input--place--max">
    <p>Message :</p>
    <%= f.input :description, label: false %>
  </div>
  <div>
    <p>Caract√®re :</p>
    <%= f.input :mood_id, collection: Mood.all, label: false %>
  </div>
  <div>
    <p>Photo :</p>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
      <%=  link_to "Retour", account_amines_path, class: "btn-back" %>
    </div>
<% end %>
